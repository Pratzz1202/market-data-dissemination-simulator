FROM ubuntu:24.04

RUN apt-get update && \
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
      build-essential cmake ninja-build pkg-config \
      protobuf-compiler libprotobuf-dev libgrpc++-dev grpc-proto && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . /app

RUN cmake -S . -B build -G Ninja && cmake --build build -j

EXPOSE 50051

CMD ["/app/build/mdd_server", "--config", "/app/instruments.json", "--address", "0.0.0.0:50051"]
